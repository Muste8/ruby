<h1><%= @article.title %></h1>

<p><%= @article.body %></p>
<p><strong>Category:</strong> <%= @article.category.name %></p>

  <%= link_to "Edit", edit_category_article_path(@category, @article), class:"btn btn-dark"  %> |
  <%= link_to "Delete", category_article_path(@category), data: {
    turbo_method: :delete,
    turbo_confirm: "Are you sure?"
  }, class:"btn btn-danger"  %>


<h2>Comments</h2>
<%= render @article.comments %>

<h2>Add a comment:</h2>
<%= render 'comments/form' %>
