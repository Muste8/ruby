<% unless comment.archived? %>
  <p>
    <strong>Commenter:</strong>
    <%= comment.commenter %>
  </p>

  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>
  <button class="like">Like</button>
  <p>
    <%= link_to "Delete", category_article_comment_path(@category, @article, comment), data: {
        turbo_method: :delete,
        turbo_confirm: "Are you sure?"
    }, class:'btn btn-dark' %>
  </p>
<% end %>
